<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rafael.hackaton_02.MainActivity"
    android:background="#3f51b5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="#ffffff"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origem"
            android:textColor="#ffffff"
            android:id="@+id/textView" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerOrigem"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="Destino"
            android:id="@+id/textView2" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDestino"
            android:textColor="#ffffff"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CartÃ£o"
            android:textColor="#ffffff"
            android:id="@+id/checkBoxC"
            android:checked="false"
            android:onClick="Pagamento"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:textColor="#ffffff"
            android:id="@+id/checkBoxP"
            android:checked="false"
            android:onClick="Pagamento"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boleto"
            android:id="@+id/checkBoxB"
            android:textColor="#ffffff"
            android:checked="false"
            android:onClick="Pagamento"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Mapa"
                android:id="@+id/buttonM"
                android:onClick="Mapa"
                android:layout_weight="2"
                android:background="#8c9eff"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Pesquisa"
                android:id="@+id/buttonPT"
                android:onClick="Busca"
                android:layout_weight="2"
                android:background="#8c9eff"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
